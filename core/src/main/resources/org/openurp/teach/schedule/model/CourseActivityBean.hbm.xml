<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
  xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.schedule.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="CourseActivityBean" entity-name="org.openurp.teach.schedule.CourseActivity">
    <cache usage="read-write" />
    <id name="id" unsaved-value="null" type="long">
      <generator class="date" />
    </id>
    <property name="lesson" not-null="true" />
    <component name="time" class="org.openurp.teach.schedule.CourseTime">
      <property name="weekday" />
      <property name="startTime" />
      <property name="endTime" />
      <property name="weekState" />
    </component>
    <set name="teachers" collection-type="set" inverse="true">
      <key column="course_activity_id" />
      <many-to-many column="teacher_id" class="org.openurp.base.Teacher" />
    </set>
    <set name="romms" collection-type="set" inverse="true">
      <key column="course_activity_id" />
      <many-to-many column="room_id" class="org.openurp.base.Room" />
    </set>
    <property name="remark" length="500" />
  </class>
</hibernate-mapping>