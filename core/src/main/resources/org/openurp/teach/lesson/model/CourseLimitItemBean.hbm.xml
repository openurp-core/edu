<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.lesson.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
    <class name="CourseLimitItemBean" entity-name="org.openurp.teach.lesson.CourseLimitItem">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="long"><generator class="auto_increment"/></id>
        <many-to-one name="meta"  not-null="true"/>
        <many-to-one name="group"  not-null="true"/>
        <property name="operator" not-null="true"/>
        <property name="content" not-null="true"/>
    </class>
       
</hibernate-mapping>