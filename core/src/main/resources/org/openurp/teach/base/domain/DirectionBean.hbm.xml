<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.base.domain"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
    <class name="DirectionBean" entity-name="org.openurp.teach.base.Direction">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="code"/></id>
        <property name="code" length="32" unique="true" not-null="true"/>
        <property name="name" length="100" unique="true" not-null="true"/>
        <property name="engName" length="255"/>
        <bag name="journals" collection-type="seq">
            <key column="direction_id" />
            <one-to-many  class="org.openurp.teach.base.DirectionJournal"/>
        </bag>
        <property name="effectiveAt"/>
        <property name="invalidAt"/>
        <property name="remark" length="500"/>
        <many-to-one name="major"/>
    </class>
    <class name="DirectionJournalBean" entity-name="org.openurp.teach.base.DirectionJournal">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="code"/></id>
        <many-to-one name="direction"/>
        <many-to-one name="education"/>
        <many-to-one name="depart"/>
        <property name="effectiveAt"/>
        <property name="invalidAt"/>
        <property name="remark" length="500"/>

    </class>
</hibernate-mapping>