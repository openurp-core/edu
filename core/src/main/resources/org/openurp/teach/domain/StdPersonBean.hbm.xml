<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.domain"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
    <class name="StdPersonBean" entity-name="org.openurp.teach.StdPerson">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="code"/></id>
        <property name="code" length="32" unique="true" not-null="true"/>
        <property name="name" length="20" unique="true" not-null="true"/>
        <property name="enName" length="255"/>
        <property name="oldname" length="255"/>
        <many-to-one name="gender" not-null="true"/>
        <property name="birthday" unique="true" not-null="true"/>
        <many-to-one name="idType"/>
        <many-to-one name="country"/>
        <property name="idcard" unique="true" not-null="true"/>
        <many-to-one name="nation"/>
        <many-to-one name="politicalAffiliation"/>
        <property name="joinOn" />
        <property name="ancestralAddr" />
        <property name="charactor" />
    </class>
     
