<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.core.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
    <class name="CourseBean" entity-name="org.openurp.teach.core.Course">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="long"><generator class="auto_increment"/></id>
        <property name="code" length="32" unique="true" not-null="true"/>
        <property name="name" length="222" unique="true" not-null="true"/>
        <property name="enName" length="300"/>
        <many-to-one name="education"  />
        <many-to-one name="category"  />
        <property name="credits"/>
        <property name="period"/>
        <bag name="hours" collection-type="seq">
            <key column="course_id" />
            <one-to-many  class="org.openurp.teach.core.CourseHour"/>
        </bag>
        <property name="weekHour"/>
        <property name="weeks"/>
        <many-to-one name="department"  />
        <property name="establishOn"/>
        <many-to-one name="courseType"  />
        <many-to-one name="examMode"  />
        <many-to-one name="markStyle"  />
        <set name="majors" collection-type="set">
            <key column="course_id" />
            <many-to-many column="major_id" class="org.openurp.teach.core.Major"/>
        </set>
        <set name="xmajors" collection-type="set">
            <key column="course_id" />
            <many-to-many column="xmajor_id" class="org.openurp.teach.core.Major"/>
        </set>
        <set name="prerequisites" collection-type="set">
            <key column="course_id" />
            <many-to-many column="prerequisite_id" class="org.openurp.teach.core.Course"/>
        </set>
        <set name="subcourses" collection-type="set">
            <key column="course_id" />
            <many-to-many column="subcourse_id" class="org.openurp.teach.core.Course"/>
        </set>
        <property name="enabled" not-null="true"/>
        <property name="remark" length="500"/>
        <property name="calGp" not-null="true"/>
    </class>
    
</hibernate-mapping>