<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
 xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.teach.core.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">
 
    <class name="DirectionBean" entity-name="org.openurp.teach.core.Direction">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" type="integer"><generator class="auto_increment"/></id>
        <property name="code" length="32" unique="true" not-null="true"/>
        <property name="name" length="100" not-null="true"/>
        <property name="enName" length="255"/>
        <bag name="journals" collection-type="seq">
            <key column="direction_id" />
            <one-to-many  class="org.openurp.teach.core.DirectionJournal"/>
        </bag> 
        <property name="beginOn"/>
        <property name="endOn"/>
        <property name="remark" length="500"/>
        <many-to-one name="major"/>
    </class>
</hibernate-mapping>